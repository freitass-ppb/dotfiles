# Ensure the script stops if any command fails
set -e

################################################################################
#                               Set Super User                                 #
################################################################################
# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until `.macos` has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

################################################################################
#                                Set Up Software                               #
################################################################################

SSH_PATH=$HOME/.ssh/work

touch $HOME/.ssh/config

# Set GitHub SSH key
echo "â³ Generating GitHub SSH key"
mkdir -p $SSH_PATH
ssh-keygen -t ed25519 -C "sergio.freitas@flutteruki.com" -N "" -f $SSH_PATH/github_id_work
eval "$(ssh-agent -s)"
printf "
# Work GitHub account
Host github.com
  HostName github.com
  AddKeysToAgent yes
  UseKeychain yes
  IdentityFile $SSH_PATH/github_id_work
  
" >> $HOME/.ssh/config
ssh-add --apple-use-keychain $SSH_PATH/github_id_work

echo "â³ Authenticating to GitHub"
gh auth login --hostname github.com --git-protocol ssh

echo "â³ Requesting GitHub admin public key"
gh auth refresh -h github.com -s admin:public_key

echo "â³ Adding public key to GitHub"
gh ssh-key add $SSH_PATH/github_id_work.pub --title $(hostname)


# Set GitLab SSH key
echo "â³ Generating GitLab SSH key"
ssh-keygen -t ed25519 -C "sergio.freitas@flutteruki.com" -N "" -f $SSH_PATH/gitlab_id_work
eval "$(ssh-agent -s)"
printf "
# Work GitLab account
Host gitlab.app.betfair
  PreferredAuthentications publickey
  IdentityFile $SSH_PATH/gitlab_id_work
  
" >> $HOME/.ssh/config
ssh-add --apple-use-keychain $SSH_PATH/gitlab_id_work

